# Copy this file to `.env` and replace the placeholder value.
OPENAI_API_KEY=sk-your-api-key

# Core synthesis settings
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=alloy
OPENAI_TTS_FORMAT=mp3

# Pipeline behaviour
TTS_CACHE_DIR=.cache
TTS_SRT_PATH=input.srt
TTS_OUTPUT_PATH=voiceover.mp3
TTS_FILL_TO_END=true
TTS_HARD_CUT=false
TTS_PAD_START_MS=0
TTS_PAD_END_MS=0
TTS_MAX_CHARS=4000
TTS_MAX_SPEEDUP=1.15
TTS_TRANSLITERATE=true
